<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título da Notificação"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDataHoraDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="21 de out de 2024, 15:30"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="300dp">

        <TextView
            android:id="@+id/tvMensagemDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="Conteúdo completo da notificação..."
            android:textSize="16sp" />
    </ScrollView>

    <Button
        android:id="@+id/botaoFecharModal"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:text="Fechar" />
</LinearLayout>
